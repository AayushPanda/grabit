from PyQt5.QtWidgets import QApplication, QGraphicsView, QGraphicsScene, QGraphicsProxyWidget, QTextEdit
from PyQt5.QtGui import QTransform
from PyQt5.QtCore import Qt

class RotatedTextArea(QGraphicsView):
    def __init__(self):
        super().__init__()
        
        # Create a scene
        self.scene = QGraphicsScene()
        self.setScene(self.scene)

        # Create a QTextEdit
        text_edit = QTextEdit()
        text_edit.setPlainText("This is a rotated text area.\nYou can select text here!")
        text_edit.setStyleSheet("""
            QTextEdit {
                background-color: lightblue;
                color: black;
                font-size: 16px;
                border: 2px solid black;
            }
        """)
        text_edit.setReadOnly(True)

        # Add QTextEdit to the scene as a proxy widget
        proxy = QGraphicsProxyWidget()
        proxy.setWidget(text_edit)
        self.scene.addItem(proxy)

        # Rotate the proxy widget
        proxy.setTransform(QTransform().rotate(45))  # Rotate 45 degrees

        # Adjust the scene rectangle
        self.setSceneRect(self.scene.itemsBoundingRect())

        

if __name__ == "__main__":
    import sys
    app = QApplication(sys.argv)
    window = RotatedTextArea()
    window.show()
    sys.exit(app.exec_())
